    <title>Document</title>
</head>

<body>
    <div class="create-form">
        <h1>Edit user</h1>
        <form action="/users/update_user" method="POST" enctype="multipart/form-data">
            <input type="text" name="oldAvatar" hidden value="<%=user.avatar%>"><br>

            <input type="text" name="id" hidden value="<%=user.id%>"><br>
            <label for="fname">Email:</label><br>
            <input type="email" name="email" value="<%=user.email%>"><br>
            <label for="lname">Address:</label><br>
            <input type="text" name="address" value="<%=user.address%>"><br><br>
            <label for="fname">First name:</label><br>
            <input type="text" name="firstName" value="<%=user.firstName%>"><br>
            <label for="lname">Last name:</label><br>
            <input type="text" name="lastName" value="<%=user.lastName%>"><br><br>
            <label for="lname">Avatar:</label><br>
            <img src="http://localhost:8080/static/avatarUser/<%=user.avatar%>" alt="#" style="height: 100;"><br>
            <input type="file" name="avatar" /> <br>
            <input type="submit" value="Submit">
        </form>
    </div>
</body>

</html>

